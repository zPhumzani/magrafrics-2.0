-#================================================== 
-# Global Page Section Start
-#================================================== -->
%section.global-page-header
  .container
    .row
      .col-md-12
        .block
          %h2 Contact
          %ol.breadcrumb
            %li
              = link_to root_path do
                %i.icon-ios-home
                Home
            %li.active Contact

-#================================================== 
-# Contact Section Start
-#================================================== -->
%section#contact-section
  .container
    .row
      .col-md-6
        .block
          %h2.subtitle.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".3s"} Drop Us A Quick Message
          %p.subtitle-des.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".5s"}
          .contact-form
            = form_for @contact, html: {id: 'contact-form' } do |f|
              .form-group.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".6s"}
                = f.text_field :name, placeholder: "Your Name", class: 'form-control'
              .form-group.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".7s"}
                = f.text_field :subject, placeholder: "Your Subject", class: 'form-control'
              .form-group.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".8s"}
                = f.email_field :email, placeholder: "Your Email", class: 'form-control'
              .form-group.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".10s"}
                = f.text_area :message, placeholder: 'Your Message',class: 'form-control', rows: 9
              .form-group.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".12s"}
                = f.hidden_field :nickname
                = f.submit 'Send message', class: "btn btn-default btn-send"

      .col-md-6
        .map-area
        %h2.subtitle.wow.fadeInDown{ "data-wow-duration": "500ms", "data-wow-delay": ".3s"} Find Us
        %p.subtitle-des.wow.fadeInDown{"data-wow-duration": "500ms", "data-wow-delay": ".5s"}
        .map
        %iframe{src: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14319.15613001473!2d28.04157520324173!3d-26.20354021666473!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e950c68f0406a51%3A0x238ac9d9b1d34041!2sJohannesburg%2C+South+Africa!5e0!3m2!1sen!2sus!4v1472209349560', width: "100%", height: 450, frameborder: 0, style: "border:0;", allowfullscreen: true}