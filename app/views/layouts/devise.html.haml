!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Magrafrics'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Magrafrics'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %section.global-page-header
      .container
        .row
          .col-md-12
            .block
            %h2 Web Services
            %ol.breadcrumb
              %li= link_to 'Home', root_path
              %li= link_to 'Service', about_path
    %section.container{:role => "main"}
      = render 'layouts/messages'
      = yield
    = render 'layouts/footer'
